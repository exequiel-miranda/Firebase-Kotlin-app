<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agregar_doctores">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="413dp"
                android:layout_height="177dp"
                android:layout_marginTop="-36dp"
                android:background="@drawable/rounded_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar nuevo paciente"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.602"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgAtrasPacientes"
                    android:layout_width="50dp"
                    android:layout_height="57dp"
                    android:src="@drawable/ic_back_white"
                    app:layout_constraintBottom_toBottomOf="@+id/textView14"
                    app:layout_constraintEnd_toStartOf="@+id/textView14"
                    app:layout_constraintHorizontal_bias="0.41"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="49dp"
                    android:layout_height="31dp"
                    android:text="Atras"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.024"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgAtrasPacientes" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="387dp"
                android:layout_height="1102dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/rounded_card_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/imgFotoPaciente"
                    android:layout_width="118dp"
                    android:layout_height="123dp"
                    android:src="@drawable/foto_default"
                    app:layout_constraintBottom_toTopOf="@+id/txtNombreMascota"
                    app:layout_constraintEnd_toStartOf="@+id/imgAgregarFotoPaciente"
                    app:layout_constraintHorizontal_bias="0.352"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.41" />

                <EditText
                    android:id="@+id/txtNombreMascota"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/txtNombreDuenio"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/txtNombreDuenio"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Dueño"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/txtEspeciePaciente"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnCrearPaciente"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/rounded_buttom"
                    android:backgroundTint="#2979FF"
                    android:text="Guardar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.407"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/txtEspeciePaciente"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Especie"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/txtRazaPaciente"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/txtRazaPaciente"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Raza"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/txtPeso"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/txtPeso"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Peso"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/txtTamanio"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.518"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/txtTamanio"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Tamaño"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/spinnerSexo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <Spinner
                    android:id="@+id/spinnerSexo"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/rounded_edittext"
                    android:backgroundTint="#000000"
                    android:backgroundTintMode="add"
                    android:entries="@array/sex_options"
                    android:foreground="@drawable/ic_down_spinner"
                    android:foregroundGravity="center|right"
                    android:foregroundTint="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/txtFechaNacimientoPaciente"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/txtFechaNacimientoPaciente"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Fecha de nacimiento"
                    android:inputType="none"
                    android:focusable="false"
                    android:paddingLeft="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/txtHistorialMedicoPaciente"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.592"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/txtHistorialMedicoPaciente"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Historial médico"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/btnCrearPaciente"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.481"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imgAgregarFotoPaciente"
                    android:layout_width="72dp"
                    android:layout_height="68dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginBottom="36dp"
                    android:src="@drawable/agregar"
                    app:layout_constraintBottom_toTopOf="@+id/txtNombreMascota"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.793" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar foto"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/txtNombreMascota"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.554"
                    app:layout_constraintStart_toEndOf="@+id/imgFotoPaciente"
                    app:layout_constraintTop_toBottomOf="@+id/imgAgregarFotoPaciente"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>